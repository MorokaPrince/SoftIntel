@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Playfair+Display:wght@400;500;600;700;800;900&family=Montserrat:wght@300;400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700;800;900&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Enhanced Professional Dark Theme Color System */
  --background: #0a0a0a;
  --background-secondary: #111111;
  --background-tertiary: #1a1a1a;
  --foreground: #ffffff;

  /* Professional Blue & Silver Brand Colors */
  --primary: #2563eb;
  --primary-light: #3b82f6;
  --primary-dark: #1d4ed8;
  --primary-gradient-start: #1e40af;
  --primary-gradient-end: #2563eb;

  /* Professional Silver Colors */
  --silver: #64748b;
  --silver-light: #94a3b8;
  --silver-dark: #475569;

  /* Professional Neutral Scale */
  --neutral-50: #f8fafc;
  --neutral-100: #f1f5f9;
  --neutral-200: #e2e8f0;
  --neutral-300: #cbd5e1;
  --neutral-400: #94a3b8;
  --neutral-500: #64748b;
  --neutral-600: #475569;
  --neutral-700: #334155;
  --neutral-800: #1e293b;
  --neutral-900: #0f172a;

  /* Dark Theme Specific Neutrals */
  --dark-50: #1a1a1a;
  --dark-100: #262626;
  --dark-200: #333333;
  --dark-300: #404040;
  --dark-400: #525252;
  --dark-500: #666666;
  --dark-600: #808080;
  --dark-700: #999999;
  --dark-800: #b3b3b3;
  --dark-900: #cccccc;

  /* Accent Colors - Harmonized with Blue Theme */
  --accent: #06b6d4;
  --accent-light: #22d3ee;
  --accent-dark: #0891b2;
  --success: #10b981;
  --warning: #f59e0b;
  --error: #ef4444;

  /* Professional Typography */
  --font-inter: 'Inter', sans-serif;
  --font-playfair: 'Playfair Display', serif;
  --font-montserrat: 'Montserrat', sans-serif;
  --font-poppins: 'Poppins', sans-serif;

  /* Professional Shadows for Dark Theme */
  --shadow-sm: 0 1px 2px 0 rgb(255 255 255 / 0.05);
  --shadow: 0 1px 3px 0 rgb(255 255 255 / 0.1), 0 1px 2px -1px rgb(255 255 255 / 0.1);
  --shadow-md: 0 4px 6px -1px rgb(255 255 255 / 0.1), 0 2px 4px -2px rgb(255 255 255 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(255 255 255 / 0.1), 0 4px 6px -4px rgb(255 255 255 / 0.1);
  --shadow-xl: 0 20px 25px -5px rgb(255 255 255 / 0.1), 0 8px 10px -6px rgb(255 255 255 / 0.1);
  --shadow-2xl: 0 25px 50px -12px rgb(255 255 255 / 0.25);

  /* Professional Border Radius */
  --radius-sm: 0.375rem;
  --radius: 0.5rem;
  --radius-md: 0.75rem;
  --radius-lg: 1rem;
  --radius-xl: 1.5rem;
  --radius-2xl: 2rem;
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: var(--font-inter);
  line-height: 1.6;
  letter-spacing: -0.01em;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  font-weight: 400;
  min-height: 100vh;
}

/* Background Image and Grid Classes */
.animated-grid {
  background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.1) 1px, transparent 0);
  background-size: 20px 20px;
}

/* Background Image Classes */
.bg-tech-1 {
  background-image: url('/ict-information-communications-technology-concept-server-room-background_161452-7815.jpg');
}

.bg-tech-2 {
  background-image: url('/plexus-scifi-background_280538-7858.jpg');
}

.bg-tech-3 {
  background-image: url('/ict-information-communications-technology-modern-server-room-background-virtual-screen_161452-3091.jpg');
}

/* Professional Typography Scale */
.text-xs { font-size: 0.75rem; line-height: 1rem; }
.text-sm { font-size: 0.875rem; line-height: 1.25rem; }
.text-base { font-size: 1rem; line-height: 1.5rem; }
.text-lg { font-size: 1.125rem; line-height: 1.75rem; }
.text-xl { font-size: 1.25rem; line-height: 1.75rem; }
.text-2xl { font-size: 1.5rem; line-height: 2rem; }
.text-3xl { font-size: 1.875rem; line-height: 2.25rem; }
.text-4xl { font-size: 2.25rem; line-height: 2.5rem; }
.text-5xl { font-size: 3rem; line-height: 1; }
.text-6xl { font-size: 3.75rem; line-height: 1; }

/* Professional Font Weights */
.font-light { font-weight: 300; }
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }
.font-extrabold { font-weight: 800; }

/* ================= COMPREHENSIVE DESIGN SYSTEM ================= */

/* Consistent Typography System */
.heading-hero {
  font-family: var(--font-poppins);
  font-weight: 800;
  line-height: 1.1;
  letter-spacing: -0.02em;
  color: var(--foreground);
  font-size: clamp(2.5rem, 5vw, 4rem);
}

.heading-section {
  font-family: var(--font-poppins);
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: -0.01em;
  color: var(--foreground);
  font-size: clamp(2rem, 4vw, 3rem);
}

.heading-card {
  font-family: var(--font-poppins);
  font-weight: 600;
  line-height: 1.3;
  letter-spacing: -0.005em;
  color: var(--foreground);
  font-size: clamp(1.25rem, 2.5vw, 1.5rem);
}

.text-body {
  font-family: var(--font-inter);
  font-weight: 400;
  line-height: 1.6;
  color: var(--silver-light);
}

.text-body-large {
  font-family: var(--font-inter);
  font-weight: 500;
  line-height: 1.7;
  color: var(--silver-light);
  font-size: clamp(1.125rem, 2vw, 1.25rem);
}

.text-caption {
  font-family: var(--font-inter);
  font-weight: 400;
  line-height: 1.5;
  color: var(--silver);
}

/* Consistent Spacing System */
.space-section { padding: 3rem 0; }
.space-section-sm { padding: 2rem 0; }
.space-section-lg { padding: 4rem 0; }

.space-content { margin: 1.5rem 0; }
.space-content-sm { margin: 1rem 0; }
.space-content-lg { margin: 2rem 0; }

/* Consistent Color System - Updated for Dark Theme */
.color-brand-primary { color: var(--primary); }
.color-brand-secondary { color: var(--primary-dark); }
.color-brand-accent { color: var(--accent); }

.color-text-primary { color: var(--foreground); }
.color-text-secondary { color: var(--dark-700); }
.color-text-muted { color: var(--dark-500); }

.color-bg-primary { background-color: var(--background); }
.color-bg-secondary { background-color: var(--background-secondary); }
.color-bg-tertiary { background-color: var(--background-tertiary); }
.color-bg-accent { background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%); }

/* Consistent Component Styles */
.card-standard {
  background: white;
  border-radius: 1rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  border: 1px solid #e2e8f0;
  transition: all 0.3s ease;
}

.card-standard:hover {
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  transform: translateY(-2px);
}

.btn-standard {
  font-family: var(--font-inter);
  font-weight: 600;
  border-radius: 0.75rem;
  transition: all 0.3s ease;
  letter-spacing: 0.025em;
}

.btn-standard-primary {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  color: white;
  box-shadow: 0 4px 14px 0 rgba(37, 99, 235, 0.39);
}

.btn-standard-primary:hover {
  background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-gradient-start) 100%);
  box-shadow: 0 8px 25px 0 rgba(37, 99, 235, 0.5);
  transform: translateY(-1px);
}

.btn-standard-secondary {
  background: transparent;
  color: var(--primary);
  border: 2px solid var(--primary);
  box-shadow: 0 2px 8px 0 rgba(37, 99, 235, 0.1);
}

.btn-standard-secondary:hover {
  background: var(--primary);
  color: white;
  box-shadow: 0 4px 16px 0 rgba(37, 99, 235, 0.3);
}

/* Professional Custom Scrollbar */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: #f8f9fa;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, var(--primary), #1d4ed8);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, #1d4ed8, #1e40af);
}

/* Smooth Scrolling */
html {
  scroll-behavior: smooth;
}

/* Professional Focus Styles */
*:focus {
  outline: 2px solid var(--primary);
  outline-offset: 2px;
}

/* Professional Selection */
::selection {
  background-color: var(--primary);
  color: white;
}

/* Professional Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-40px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(40px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Professional Animation Classes */
.animate-fade-in-up {
  animation: fadeInUp 0.8s ease-out;
}

.animate-slide-in-left {
  animation: slideInLeft 0.8s ease-out;
}

.animate-slide-in-right {
  animation: slideInRight 0.8s ease-out;
}

.animate-scale-in {
  animation: scaleIn 0.6s ease-out;
}

/* Professional Hover Effects */
.hover-professional {
  transition: all 0.3s ease;
}

.hover-professional:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

/* Professional Typography Classes */
.heading-display {
  font-family: var(--font-playfair);
  font-weight: 700;
  line-height: 1.1;
  letter-spacing: -0.02em;
  color: var(--foreground);
}

.heading-sans {
  font-family: var(--font-montserrat);
  font-weight: 600;
  line-height: 1.2;
  letter-spacing: -0.01em;
  color: var(--foreground);
}

.text-professional {
  font-family: var(--font-inter);
  font-weight: 400;
  line-height: 1.7;
  color: var(--dark-700);
}

/* Professional Color Classes */
.color-primary {
  color: var(--foreground);
}

.color-secondary {
  color: var(--dark-700);
}

.color-accent {
  color: var(--primary);
}

/* Professional Background Classes */
.bg-professional-light {
  background: linear-gradient(135deg, var(--background) 0%, var(--background-secondary) 100%);
}

.bg-professional-dark {
  background: linear-gradient(135deg, var(--background-secondary) 0%, var(--background-tertiary) 100%);
}

/* Professional Button Classes */
.btn-professional-primary {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  color: white;
  font-family: var(--font-montserrat);
  font-weight: 600;
  letter-spacing: 0.5px;
  font-size: 1rem;
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
}

.btn-professional-primary:hover {
  background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-gradient-start) 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(37, 99, 235, 0.4);
}

.btn-professional-secondary {
  background: transparent;
  color: var(--primary);
  border: 2px solid var(--primary);
  font-family: var(--font-montserrat);
  font-weight: 600;
  letter-spacing: 0.5px;
  font-size: 1rem;
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(37, 99, 235, 0.1);
}

.btn-professional-secondary:hover {
  background: var(--primary);
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(37, 99, 235, 0.3);
}

/* Professional Card Classes */
.card-professional {
  background: linear-gradient(145deg, var(--background-secondary), var(--background-tertiary));
  border: 1px solid var(--dark-300);
  border-radius: 1rem;
  padding: 2rem;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.card-professional:hover {
  transform: translateY(-4px);
  border-color: var(--primary);
  box-shadow: 0 8px 25px rgba(37, 99, 235, 0.2);
}

/* Professional Section Spacing */
.section-professional {
  @apply py-20 md:py-28 lg:py-32;
}

/* Professional Utility Classes */
.text-professional-xs {
  @apply text-sm text-slate-600;
}

.text-professional-sm {
  @apply text-base text-slate-700;
}

.text-professional-md {
  @apply text-lg text-slate-800;
}

.text-professional-lg {
  @apply text-xl text-slate-900;
}

.text-professional-xl {
  @apply text-2xl text-slate-900;
}

.shadow-professional {
  box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.shadow-professional-lg {
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

/* Professional Backgrounds */
.tech-bg-primary {
  background:
    linear-gradient(135deg, rgba(10, 10, 10, 0.8) 0%, rgba(17, 17, 17, 0.9) 100%),
    url("/tech-background.jpg");
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}

.tech-bg-secondary {
  background:
    linear-gradient(135deg, rgba(10, 10, 10, 0.85) 0%, rgba(17, 17, 17, 0.9) 100%),
    url("/plexus-scifi-background_280538-7858.jpg");
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}

.tech-bg-accent {
  background:
    linear-gradient(135deg, rgba(10, 10, 10, 0.8) 0%, rgba(17, 17, 17, 0.85) 100%),
    url("/ict-information-communications-technology-modern-server-room-background-virtual-screen_161452-3091.jpg");
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}

/* Professional Grid Background */
.digital-grid {
  background-image:
    radial-gradient(circle at 1px 1px, rgba(37, 99, 235, 0.1) 1px, transparent 0);
  background-size: 20px 20px;
}

/* Professional Circuit Pattern */
.circuit-bg {
  background-image:
    url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' stroke='%232563eb' stroke-width='0.5' opacity='0.1'%3E%3Cpath d='M10,10 L90,10 L90,90 L10,90 Z'/%3E%3Cpath d='M20,20 L80,20 L80,80 L20,80 Z'/%3E%3Cpath d='M30,30 L70,30 L70,70 L30,70 Z'/%3E%3Ccircle cx='50' cy='50' r='20'/%3E%3C/g%3E%3C/svg%3E");
  background-size: 60px 60px;
}

/* Professional Geometric Pattern */
.geometric-bg {
  background:
    linear-gradient(135deg, rgba(37, 99, 235, 0.05) 0%, rgba(30, 64, 175, 0.05) 100%),
    url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%232563eb' fill-opacity='0.03' fill-rule='evenodd'%3E%3Cpath d='M0 20c10-10 20-10 30 0s20 10 30 0v20H0V20z'/%3E%3C/g%3E%3C/svg%3E");
  background-size: cover, 40px 40px;
}

/* Professional Button Styles - Blue & Silver Theme */
.btn-professional-primary {
  @apply bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5;
}

.btn-professional-secondary {
  @apply bg-transparent border-2 border-primary-600 text-primary-400 hover:bg-primary-600/10 font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5;
}

.btn-professional-silver {
  @apply bg-gradient-to-r from-silver-500 to-silver-600 hover:from-silver-600 hover:to-silver-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5;
}

/* Legacy button styles for compatibility */
.btn-primary {
  @apply bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5;
}

.btn-secondary {
  @apply bg-transparent border-2 border-primary-600 text-primary-400 hover:bg-primary-600/10 font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5;
}

.btn-success {
  @apply bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5;
}

/* Professional Card Styles */
.card-professional {
  @apply bg-white rounded-xl border border-slate-200 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1;
}

.card-glass {
  @apply bg-white/95 backdrop-blur-sm border border-white/20 shadow-xl;
}

/* Professional Animation Keyframes */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(30px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

@keyframes gentleFloat {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8px); }
}

/* Professional Animation Classes */
.animate-fade-in {
  animation: fadeIn 0.8s ease-out;
}

.animate-slide-up {
  animation: slideUp 0.8s ease-out;
}

.animate-gentle-float {
  animation: gentleFloat 6s ease-in-out infinite;
}

/* Professional Card Effects */
.card-3d {
  transform-style: preserve-3d;
  transition: transform 0.3s ease;
}

.card-3d:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

/* Professional Glass Morphism */
.glass-advanced {
  background: rgba(255, 255, 255, 0.95);
  -webkit-backdrop-filter: blur(15px) saturate(120%);
  backdrop-filter: blur(15px) saturate(120%);
  border: 1px solid rgba(37, 99, 235, 0.1);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.9);
}

/* Professional Hover Effects */
.hover-professional {
  transition: all 0.3s ease;
}

.hover-professional:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

/* Professional 3D Effects */
.transform-3d {
  transform-style: preserve-3d;
  perspective: 1000px;
}

.transform-3d-hover:hover {
  transform: rotateY(5deg) rotateX(5deg) translateZ(20px);
}

/* Professional Gradient Mesh */
.gradient-mesh {
  background:
    radial-gradient(at 40% 20%, rgba(37, 99, 235, 0.15) 0px, transparent 50%),
    radial-gradient(at 80% 0%, rgba(30, 64, 175, 0.1) 0px, transparent 50%),
    radial-gradient(at 0% 50%, rgba(99, 102, 241, 0.1) 0px, transparent 50%);
}

/* Professional Loading States */
.loading-shimmer {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

@keyframes gradient-shift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

@keyframes ken-burns {
  0% {
    transform: scale(1) translate(0, 0);
    opacity: 0.05;
  }
  50% {
    transform: scale(1.1) translate(-2%, -2%);
    opacity: 0.08;
  }
  100% {
    transform: scale(1.05) translate(2%, 2%);
    opacity: 0.05;
  }
}

@keyframes ken-burns-reverse {
  0% {
    transform: scale(1.05) translate(2%, 2%);
    opacity: 0.05;
  }
  50% {
    transform: scale(1.1) translate(-2%, -2%);
    opacity: 0.08;
  }
  100% {
    transform: scale(1) translate(0, 0);
    opacity: 0.05;
  }
}

@keyframes ken-burns-float {
  0% {
    transform: scale(1) translate(0, 0) rotate(0deg);
    opacity: 0.04;
  }
  25% {
    transform: scale(1.05) translate(-1%, -1%) rotate(1deg);
    opacity: 0.06;
  }
  50% {
    transform: scale(1.1) translate(1%, -2%) rotate(-1deg);
    opacity: 0.08;
  }
  75% {
    transform: scale(1.05) translate(-2%, 1%) rotate(0.5deg);
    opacity: 0.06;
  }
  100% {
    transform: scale(1) translate(0, 0) rotate(0deg);
    opacity: 0.04;
  }
}

@keyframes ken-burns-subtle {
  0% {
    transform: scale(1) translate(0, 0);
    opacity: 0.03;
  }
  33% {
    transform: scale(1.02) translate(-0.5%, -0.5%);
    opacity: 0.05;
  }
  66% {
    transform: scale(1.03) translate(0.5%, 0.5%);
    opacity: 0.07;
  }
  100% {
    transform: scale(1) translate(0, 0);
    opacity: 0.03;
  }
}

