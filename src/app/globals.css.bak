/* Enhanced Particle Animations */
@keyframes particle-float {
  0% {
    transform: translateY(0px) translateX(0px) rotate(0deg);
    opacity: 0.2;
  }
  33% {
    transform: translateY(-20px) translateX(10px) rotate(120deg);
    opacity: 0.6;
  }
  66% {
    transform: translateY(-10px) translateX(-5px) rotate(240deg);
    opacity: 0.4;
  }
  100% {
    transform: translateY(0px) translateX(0px) rotate(360deg);
    opacity: 0.2;
  }
}

@keyframes particle-drift {
  0% {
    transform: translateX(0px) translateY(0px) scale(1);
    opacity: 0.3;
  }
  25% {
    transform: translateX(100px) translateY(-30px) scale(1.1);
    opacity: 0.7;
  }
  50% {
    transform: translateX(-50px) translateY(20px) scale(0.9);
    opacity: 0.5;
  }
  75% {
    transform: translateX(30px) translateY(-10px) scale(1.05);
    opacity: 0.6;
  }
  100% {
    transform: translateX(0px) translateY(0px) scale(1);
    opacity: 0.3;
  }
}

@keyframes particle-spiral {
  0% {
    transform: rotate(0deg) translateX(30px) rotate(0deg) scale(1);
    opacity: 0.2;
  }
  50% {
    transform: rotate(180deg) translateX(30px) rotate(-180deg) scale(1.2);
    opacity: 0.8;
  }
  100% {
    transform: rotate(360deg) translateX(30px) rotate(-360deg) scale(1);
    opacity: 0.2;
  }
}

/* Enhanced Logo Animations */
@keyframes logo-glow-pulse {
  0% {
    filter: drop-shadow(0 0 5px rgba(37, 99, 235, 0.3)) brightness(1);
  }
  50% {
    filter: drop-shadow(0 0 20px rgba(37, 99, 235, 0.6)) brightness(1.2);
  }
  100% {
    filter: drop-shadow(0 0 5px rgba(37, 99, 235, 0.3)) brightness(1);
  }
}

@keyframes logo-rotate-3d {
  0% {
    transform: perspective(1000px) rotateY(0deg) rotateX(0deg);
  }
  25% {
    transform: perspective(1000px) rotateY(90deg) rotateX(10deg);
  }
  50% {
    transform: perspective(1000px) rotateY(180deg) rotateX(0deg);
  }
  75% {
    transform: perspective(1000px) rotateY(270deg) rotateX(-10deg);
  }
  100% {
    transform: perspective(1000px) rotateY(360deg) rotateX(0deg);
  }
}

/* Enhanced Background Animations */
@keyframes gradient-shift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes grid-flow {
  0% {
    background-position: 0px 0px;
  }
  100% {
    background-position: 20px 20px;
  }
}

@keyframes cyberpunk-border {
  0% {
    box-shadow: 0 0 5px rgba(37, 99, 235, 0.3);
  }
  50% {
    box-shadow: 0 0 20px rgba(37, 99, 235, 0.6), 0 0 30px rgba(99, 102, 241, 0.4);
  }
  100% {
    box-shadow: 0 0 5px rgba(37, 99, 235, 0.3);
  }
}

/* Enhanced Utility Classes */
.animate-particle-float {
  animation: particle-float 8s ease-in-out infinite;
}

.animate-particle-drift {
  animation: particle-drift 12s ease-in-out infinite;
}

.animate-particle-spiral {
  animation: particle-spiral 10s linear infinite;
}

.animate-logo-glow {
  animation: logo-glow-pulse 3s ease-in-out infinite;
}

.animate-logo-3d {
  animation: logo-rotate-3d 15s ease-in-out infinite;
}

.animate-gradient-shift {
